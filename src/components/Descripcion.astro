---
const { descripcion } = Astro.props;
const { titulo, subtitulo, lista } = descripcion;
---

<div>
  <div class="contenedor">
    <h1 class="text-2xl font-semibold">{titulo}</h1>
    <p class="text-sm text-pretty">
      {subtitulo}
    </p>
  </div>
  <ul class="text-left px-4">
    {
      lista.map((item, index) => (
        <li class="list-item" key={index}>
          {item}
        </li>
      ))
    }
  </ul>
</div>

<style>
  .contenedor {
    display: flex;
    flex-direction: column;
    place-items: center;
    padding: 1rem;
  }
</style>
