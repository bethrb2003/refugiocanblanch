---
const { dataInstrucciones } = Astro.props;
const { titulo, tips } = dataInstrucciones;
---

<div class="flex flex-col p-4">
  <h1 class="text-2xl font-bold text-center">{titulo}</h1>
  {
    tips.map((tip, index) => (
      <div key={index}>
        <div class="mb-4 px-2 border-t border-slate-700">
          <p class="text-base font-semibold ">{tip.subtitulo}</p>
          <p class="text-base">{tip.instruccion}</p>
        </div>
      </div>
    ))
  }
</div>
