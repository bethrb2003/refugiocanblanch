---
const { dataWifi } = Astro.props;
const { titulo, data, intro, text } = dataWifi;
---

<div class="container">
  <h2 class="title">{titulo}</h2>
  <p class="text">{intro}</p>
  {
    data.map((tip, index) => (
      <div key={index}>
        <div class="instructions">
          <p class="subtitle">{tip.subtitulo}</p>
          <p class="info">{tip.info}</p>
          <p class="info">{tip.info2}</p>
          <p class="info">{tip.info3}</p>
          <p class="info">{tip.info4}</p>
        </div>
      </div>
    ))
  }
  <p set:html={text} class="text" />
</div>

<style>

  .container {
    display: flex;
    flex-direction: column;
    padding: 16px;
  }

  .title {
    font-size: 24px;
    font-weight: 700;
    text-align: center;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  .text {
    margin: 16px 0;
    padding: 0 8px;
    text-align: justify;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  .instructions {
    margin-bottom: 16px;
    padding: 0 8px;
    border-top-width: 1px solid var(--negro);
  }

  .subtitle {
    font-size: 16px;
    font-weight: 600;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  .info {
    font-size: 16px;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  @keyframes show {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
    
  }

</style>