---
const { dataRestaurantes } = Astro.props;
const { titulo, data } = dataRestaurantes;
---

<section class="flex flex-col justify-center items-center mt-4">
  <h2 class="text-2xl font-semibold">{titulo}</h2>
  <table>
    {
      data.map((lugar) => (
        <tr class="">
          <td class="border border-slate-700 px-1">{lugar.nombre}</td>
          <td class="border border-slate-700 px-1">{lugar.telefono}</td>
          <td class="border border-slate-700 px-1">
            <a href={lugar.map} target="_blank">
              🗺️
            </a>
          </td>
        </tr>
      ))
    }
  </table>
</div>