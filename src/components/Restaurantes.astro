---
const { dataRestaurantes } = Astro.props;
const { titulo, data } = dataRestaurantes;
---

<section class="container">
  <h2 class="title">{titulo}</h2>
  <table>
    {
      data.map((lugar) => (
        <tr class="tabla">
          <td >{lugar.nombre}</td>
          <td >{lugar.telefono}</td>
          <td>
            <a href={lugar.web} target="_blank">
              üåê
            </a>
          </td>
          <td>
            <a href={lugar.map} target="_blank">
              üó∫Ô∏è
            </a>
          </td>
        </tr>
      ))
    }
  </table>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 16px;
    margin-bottom: 20px;
  }

  .title {
    font-size: 24px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 15px;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  .tabla {
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  td {
    border: 1px solid var(--negro); 
    padding: 5px;
  }

  a {
    font-size: 17px;
  }

  @keyframes show {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
    
  }
</style>