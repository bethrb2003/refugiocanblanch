---
const { quienesSomos } = Astro.props;
const { titulo, subtitulo, texto } = quienesSomos;
---

<div class="container">
  <div class="subtitleContainer">
    <div class="lineDecoration"></div>
    <h3 class="subtitle">{subtitulo}</h3>
  </div>
  <h2 class="title">{titulo}</h2>
  <p set:html={texto} class="text" />
</div>

<style>
  .container {
    padding: 1rem;
    margin-top: 40px;
    width: 100%;
  }
  .title {
    text-align: start;
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 20px;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  .subtitleContainer {
    display: flex;
    align-items: center;
    width: 100%;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  .subtitle {
    text-align: center;
    font-size: 20px ;
    font-weight: 500;
    padding-left: 10px ;
  }

  .lineDecoration {
    height: 1px;
    width: 60px;
    background-color: var(--negro);
  }

  .text {
    font-size: 14px;
    text-align: justify;
    margin-bottom: 40px;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }

  @media (min-width: 768px) {
    .title {
      font-size: 35px;
      margin-left: 20px;
    }
    .subtitle {
      font-size: 25px;
    }

    .subtitleContainer {
      margin-left: 20px;
    }

    .text {
      margin-left: 20px;
      font-size: 15px;
    }
  }

  @media (min-width: 1024px) {
    .title {
      font-size: 40px;
      margin-left: 40px;
    }
    .subtitle {
      font-size: 30px;
    }

    .subtitleContainer {
      margin-left: 40px;
    }

    .text {
      margin-left: 40px;
      font-size: 17px;
    }
  }

  @keyframes show {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
    
  }

</style>