---
const { quienesSomos } = Astro.props;
const { titulo, texto } = quienesSomos;
---

<div class="container">
  <h2 class="title">{titulo}</h2>
  <p set:html={texto} class="text" />
</div>

<style>
  .container {
    display:flex;
    flex-direction: column;
    padding: 1rem;
  }
  .title {
    text-align: start;
    font-size: 24px;
    font-weight: 600;
  }

  .text {
    font-size: 14px;
    text-align: start;
  }

</style>