---
const { slider } = Astro.props;
const { titulo, subtitulo, botonCTA } = slider;
import BotonReservar from "./BotonReservar.astro";
---

<div class="bigContainer">
  <div class="container">
    <h1 class="title">
      {titulo}
    </h1>
    <p class="subtitle">
      {subtitulo}
    </p>
    <div class="lineDecoration"></div>
    <br>
    <div>
      <BotonReservar>
      {botonCTA}
    </BotonReservar>
    </div>
  </div>
  <div>
    <img src="/images/foto2.webp" alt="" />
  </div>
</div>

<style>
  .bigContainer {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 74dvh;
  }

  .container {
    position: absolute;
    width: 80%;
    text-align: center;
    background-color: rgb(3 7 18 / var(--tw-bg-opacity));
    padding: 8px;
    --tw-bg-opacity: 0.5;
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .title {
    margin-bottom: 5px;
    font-size: 29px;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.025em;
    color: #ffffff;
    text-align: center;
  }

  .lineDecoration {
    width: 25%;
    height: 3px;
    background-color: var(--primary);
  }

  .subtitle {
    margin-bottom: 16px;
    font-size: 15px;
    color: #ffffff;
    text-align: center;
  }

  img {
    height: 90vh;
    object-fit: cover; 
  }
  

  @media (min-width: 768px) {
    .title {
      font-size: 40px;
    }

    .subtitle {
      font-size: 30px;
    }
  }

  @media (min-width: 1024px) {
    .title {
      font-size: 60px;
    }
    .subtitle {
      font-size: 40px;
    }
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
