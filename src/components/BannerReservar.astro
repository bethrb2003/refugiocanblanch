---
const { data } = Astro.props;
const { botonCTA, bannerTexto } = data;
import BotonReservar from "./BotonReservar.astro";
---

<div class="contenedor">
  <button>{bannerTexto}</button>
</div>

<style>
  .contenedor {
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--blanco);
    gap: 0.75rem;
    background-color: var(--primary);
    width: 100%;
    height: 3.5rem;
  }
  button {
    transition: transform 0.3s ease-in-out;
    background-color: var(--blanco);
    color: var(--negro);
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    padding-left: 1rem;
    padding-right: 1rem;
    border-radius: 0.5rem;
  }

  button:hover {
    transform: scale(1.1);
  }
</style>
