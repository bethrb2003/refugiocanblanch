---
const { bannerTexto } = Astro.props;
const { titulo } = bannerTexto;
import BotonReservar from "./BotonReservar.astro";
---

<div class="contenedor">
  <a
    href="https://www.airbnb.es/rooms/1027582229765153879?check_in=2024-03-17&check_out=2024-03-22&guests=1&adults=1&s=67&unique_share_id=77e201ad-ba99-4bdd-8233-c51e79528b9e"
    target="_blank"><button>{titulo}</button></a
  >
</div>

<style>
  .contenedor {
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--blanco);
    gap: 0.75rem;
    background-color: var(--primary);
    width: 100%;
    height: 3.5rem;
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }
  button {
    transition: transform 0.3s ease-in-out;
    background-color: var(--blanco);
    color: var(--negro);
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    padding-left: 1rem;
    padding-right: 1rem;
    border-radius: 0.5rem;
  }

  button:hover {
    transform: scale(1.1);
  }
  
  @keyframes show {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
    
  }
</style>
